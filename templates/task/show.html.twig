{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}

    <nav class="navbar navbar-light bg-light mb-3">
        <a class="btn btn-link" href="{{ path('task_index') }}"> <i class="fas fa-chevron-left"></i> </a>
        <h3 class="text-uppercase m-0">Task</h3>
        <div class="d-flex justify-content-end">
            <a class="btn btn-success mr-1" href="{{ path('task_edit', {'id': task.id}) }}"> <i class="fas fa-pen"></i> </a>
            {{ include('task/_delete_form.html.twig') }}
        </div>
    </nav>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ task.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ task.title }}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ task.comment }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ task.date ? task.date|date('d.m.Y') : '' }}</td>
        </tr>
        <tr>
            <th>Time Spent</th>
            <td>{{ task.timeSpent ? task.timeSpent|date('H:i') : '' }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
